@page
@model AccountsModel
@{
    ViewData["Title"] = "账户管理";
    ViewData["ActivePage"] = "Accounts";
}

<div class="row mb-4">
    <div class="col-12 d-flex justify-content-between align-items-center">
        <div>
            <h4 class="mb-0">账户管理</h4>
            <small class="text-muted">
                @if (!string.IsNullOrEmpty(Model.Keyword))
                {
                    <span>搜索到 @Model.TotalCount 个账户</span>
                }
                else
                {
                    <span>总计 @Model.TotalCount 个账户</span>
                }
            </small>
        </div>
        <form method="get" class="d-flex gap-2">
            <input type="text" name="keyword" class="form-control" placeholder="搜索邮箱或角色名..."
                   value="@Model.Keyword" style="width: 250px;" />
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-search"></i> 搜索
            </button>
            <a href="/Accounts" class="btn btn-outline-secondary" title="重置">
                <i class="bi bi-arrow-counterclockwise"></i>
            </a>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        @if (Model.Accounts.Count > 0)
        {
            <div class="table-responsive" style="min-height: 300px; overflow: visible;">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>邮箱</th>
                            <th>权限</th>
                            <th>角色数</th>
                            <th>元宝</th>
                            <th>狩猎币</th>
                            <th>状态</th>
                            <th>最后登录</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var account in Model.Accounts)
                        {
                            <tr>
                                <td>
                                    <strong>@account.Email</strong>
                                    @if (account.Characters.Count > 0)
                                    {
                                        <br />
                                        <small class="text-muted">
                                            @string.Join(", ", account.Characters.Where(c => !c.Deleted).Select(c => c.Name).Take(3))
                                            @if (account.Characters.Count(c => !c.Deleted) > 3)
                                            {
                                                <span>...</span>
                                            }
                                        </small>
                                    }
                                </td>
                                <td>
                                    @{
                                        var permClass = account.Permission switch
                                        {
                                            "SuperAdmin" => "bg-danger",
                                            "Admin" => "bg-warning text-dark",
                                            "Operator" => "bg-info",
                                            "Supervisor" => "bg-primary",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @permClass">@account.Permission</span>
                                </td>
                                <td>@account.CharacterCount</td>
                                <td>@account.GameGold.ToString("N0")</td>
                                <td>@account.HuntGold.ToString("N0")</td>
                                <td>
                                    @if (account.Banned)
                                    {
                                        <span class="badge bg-danger">已封禁</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">正常</span>
                                    }
                                </td>
                                <td>
                                    @if (account.LastLogin != DateTime.MinValue)
                                    {
                                        @account.LastLogin.ToString("MM-dd HH:mm")
                                    }
                                    else
                                    {
                                        <span class="text-muted">从未</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm dropup">
                                        <button type="button" class="btn btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" data-bs-display="static">
                                            操作
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            @if (account.Banned)
                                            {
                                                <li>
                                                    <form method="post" asp-page-handler="Unban" class="d-inline">
                                                        <input type="hidden" name="email" value="@account.Email" />
                                                        <button type="submit" class="dropdown-item text-success">
                                                            <i class="bi bi-unlock me-2"></i>解除封禁
                                                        </button>
                                                    </form>
                                                </li>
                                            }
                                            else
                                            {
                                                <li>
                                                    <form method="post" asp-page-handler="Ban" class="d-inline">
                                                        <input type="hidden" name="email" value="@account.Email" />
                                                        <button type="submit" class="dropdown-item text-danger">
                                                            <i class="bi bi-lock me-2"></i>封禁账户
                                                        </button>
                                                    </form>
                                                </li>
                                            }
                                            <li><hr class="dropdown-divider" /></li>
                                            <li>
                                                <button type="button" class="dropdown-item" data-bs-toggle="modal" data-bs-target="#goldModal"
                                                        data-email="@account.Email" data-gold="@account.GameGold">
                                                    <i class="bi bi-coin me-2"></i>修改元宝
                                                </button>
                                            </li>
                                            <li>
                                                <button type="button" class="dropdown-item" data-bs-toggle="modal" data-bs-target="#permModal"
                                                        data-email="@account.Email" data-permission="@account.PermissionValue">
                                                    <i class="bi bi-shield-check me-2"></i>修改权限
                                                </button>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center text-muted py-5">
                <i class="bi bi-inbox display-1"></i>
                <p class="mt-3 mb-0">
                    @if (!string.IsNullOrEmpty(Model.Keyword))
                    {
                        <span>没有找到匹配 "@Model.Keyword" 的账户</span>
                    }
                    else
                    {
                        <span>暂无账户数据</span>
                    }
                </p>
            </div>
        }
    </div>

    @* 分页组件 *@
    @if (Model.TotalPages > 1)
    {
        <div class="card-footer">
            <nav>
                <ul class="pagination pagination-sm mb-0 justify-content-center">
                    @* 首页 *@
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="?PageNumber=1@(string.IsNullOrEmpty(Model.Keyword) ? "" : $"&Keyword={Model.Keyword}")" title="首页">
                            <i class="bi bi-chevron-double-left"></i>
                        </a>
                    </li>
                    @* 上一页 *@
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="?PageNumber=@(Model.CurrentPage - 1)@(string.IsNullOrEmpty(Model.Keyword) ? "" : $"&Keyword={Model.Keyword}")" title="上一页">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>

                    @* 第一页（如果不在显示范围内） *@
                    @if (Model.CurrentPage > 3)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?PageNumber=1@(string.IsNullOrEmpty(Model.Keyword) ? "" : $"&Keyword={Model.Keyword}")">1</a>
                        </li>
                        @if (Model.CurrentPage > 4)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                    }

                    @* 当前页前后各2页 *@
                    @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" href="?PageNumber=@i@(string.IsNullOrEmpty(Model.Keyword) ? "" : $"&Keyword={Model.Keyword}")">@i</a>
                        </li>
                    }

                    @* 最后一页（如果不在显示范围内） *@
                    @if (Model.CurrentPage < Model.TotalPages - 2)
                    {
                        @if (Model.CurrentPage < Model.TotalPages - 3)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                        <li class="page-item">
                            <a class="page-link" href="?PageNumber=@Model.TotalPages@(string.IsNullOrEmpty(Model.Keyword) ? "" : $"&Keyword={Model.Keyword}")">@Model.TotalPages</a>
                        </li>
                    }

                    @* 下一页 *@
                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="?PageNumber=@(Model.CurrentPage + 1)@(string.IsNullOrEmpty(Model.Keyword) ? "" : $"&Keyword={Model.Keyword}")" title="下一页">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                    @* 末页 *@
                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="?PageNumber=@Model.TotalPages@(string.IsNullOrEmpty(Model.Keyword) ? "" : $"&Keyword={Model.Keyword}")" title="末页">
                            <i class="bi bi-chevron-double-right"></i>
                        </a>
                    </li>
                </ul>
                <div class="text-center mt-2">
                    <small class="text-muted">第 @Model.CurrentPage / @Model.TotalPages 页，共 @Model.TotalCount 个账户，每页 @Model.PageSize 条</small>
                </div>
            </nav>
        </div>
    }
</div>

<!-- 修改元宝 Modal -->
<div class="modal fade" id="goldModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="ModifyGold">
                <div class="modal-header">
                    <h5 class="modal-title">修改元宝</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="email" id="goldModalEmail" />
                    <div class="mb-3">
                        <label class="form-label">账户</label>
                        <input type="text" class="form-control" id="goldModalEmailDisplay" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">当前元宝</label>
                        <input type="text" class="form-control" id="goldModalCurrent" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">增减数量（负数为扣除）</label>
                        <input type="number" class="form-control" name="amount" min="-9999999" max="9999999" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                    <button type="submit" class="btn btn-primary">确认修改</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- 修改权限 Modal -->
<div class="modal fade" id="permModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="SetPermission">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-shield-check me-2"></i>修改账户权限</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="email" id="permModalEmail" />
                    <div class="mb-3">
                        <label class="form-label">账户</label>
                        <input type="text" class="form-control" id="permModalEmailDisplay" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">选择权限等级</label>
                        <select class="form-select" name="permission" id="permModalSelect">
                            @foreach (var perm in Model.PermissionLevels)
                            {
                                <option value="@perm.Value">@perm.Name</option>
                            }
                        </select>
                    </div>
                    <div class="alert alert-warning mb-0">
                        <i class="bi bi-exclamation-triangle me-1"></i>
                        <strong>警告：</strong>修改权限后立即生效，需要 SuperAdmin 权限。
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                    <button type="submit" class="btn btn-warning">确认修改</button>
                </div>
            </form>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div class="toast show" role="alert">
            <div class="toast-header">
                <i class="bi bi-info-circle me-2 text-primary"></i>
                <strong class="me-auto">操作结果</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
                @Model.Message
            </div>
        </div>
    </div>
}

@section Scripts {
<script>
    // 元宝 Modal 数据填充
    var goldModal = document.getElementById('goldModal');
    goldModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        var email = button.getAttribute('data-email');
        var gold = button.getAttribute('data-gold');

        document.getElementById('goldModalEmail').value = email;
        document.getElementById('goldModalEmailDisplay').value = email;
        document.getElementById('goldModalCurrent').value = gold;
    });

    // 权限 Modal 数据填充
    var permModal = document.getElementById('permModal');
    permModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        var email = button.getAttribute('data-email');
        var permission = button.getAttribute('data-permission');

        document.getElementById('permModalEmail').value = email;
        document.getElementById('permModalEmailDisplay').value = email;
        document.getElementById('permModalSelect').value = permission;
    });

    // 自动隐藏 Toast
    setTimeout(function() {
        var toasts = document.querySelectorAll('.toast');
        toasts.forEach(function(toast) {
            var bsToast = new bootstrap.Toast(toast);
            bsToast.hide();
        });
    }, 3000);
</script>
}
