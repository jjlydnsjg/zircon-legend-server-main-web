@page
@model PlayersModel
@{
    ViewData["Title"] = "在线玩家";
    ViewData["ActivePage"] = "Players";
}

<!-- 粘性操作栏 -->
<div class="page-action-bar">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
        <div>
            <h4 class="mb-0">在线玩家</h4>
            <small class="text-muted-custom" id="onlinePlayerCount">当前在线 @Model.Players.Count 人</small>
        </div>
        <div class="d-flex gap-2 flex-wrap">
            <form method="get" class="d-flex gap-2">
                <input type="text" name="keyword" class="form-control" placeholder="搜索角色名或账户..."
                       value="@Model.Keyword" style="min-width: 200px;" />
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search"></i>
                </button>
                <a href="/Players" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise"></i> 刷新
                </a>
            </form>
        </div>
    </div>
</div>

<!-- 可滚动表格卡片 -->
<div class="card table-scrollable-card">
    <div class="card-body p-0">
        @if (Model.Players.Count > 0)
        {
            <div class="table-responsive-wrapper">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>角色名</th>
                            <th>等级</th>
                            <th>职业</th>
                            <th>性别</th>
                            <th>地图</th>
                            <th>坐标</th>
                            <th>金币</th>
                            <th>元宝</th>
                            <th>PK值</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var player in Model.Players)
                        {
                            <tr data-player-row="@player.Name">
                                <td>
                                    <strong>@player.Name</strong>
                                    <br /><small class="text-muted-custom">@player.AccountEmail</small>
                                </td>
                                <td data-player-level="@player.Name"><span class="badge" style="background: var(--color-accent); color: #000;">Lv.@player.Level</span></td>
                                <td>@player.Class</td>
                                <td>@player.Gender</td>
                                <td>@player.MapName</td>
                                <td>@player.LocationX, @player.LocationY</td>
                                <td>@player.Gold.ToString("N0")</td>
                                <td>@player.GameGold.ToString("N0")</td>
                                <td>
                                    @if (player.PKPoints > 0)
                                    {
                                        <span class="badge" style="background: var(--color-danger);">@player.PKPoints</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted-custom">0</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <button type="button" class="btn btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" data-bs-boundary="viewport">
                                            操作
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end shadow">
                                            <li>
                                                <button type="button" class="dropdown-item" data-bs-toggle="modal" data-bs-target="#levelUpModal"
                                                        data-player-name="@player.Name" data-player-level="@player.Level">
                                                    <i class="bi bi-arrow-up-circle me-2"></i>提升等级
                                                </button>
                                            </li>
                                            <li><hr class="dropdown-divider" /></li>
                                            <li>
                                                <form method="post" asp-page-handler="Recall" class="d-inline">
                                                    <input type="hidden" name="playerName" value="@player.Name" />
                                                    <button type="submit" class="dropdown-item">
                                                        <i class="bi bi-person-plus me-2"></i>召唤到身边
                                                    </button>
                                                </form>
                                            </li>
                                            <li>
                                                <form method="post" asp-page-handler="Kick" class="d-inline">
                                                    <input type="hidden" name="playerName" value="@player.Name" />
                                                    <button type="submit" class="dropdown-item" style="color: var(--color-danger);">
                                                        <i class="bi bi-box-arrow-right me-2"></i>踢下线
                                                    </button>
                                                </form>
                                            </li>
                                            <li><hr class="dropdown-divider" /></li>
                                            <li>
                                                <a class="dropdown-item" href="/Accounts?keyword=@player.AccountEmail">
                                                    <i class="bi bi-person-badge me-2"></i>查看账户
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center text-muted-custom py-5">
                <i class="bi bi-inbox" style="font-size: 4rem; opacity: 0.3;"></i>
                <p class="mt-3 mb-0">
                    @if (!string.IsNullOrEmpty(Model.Keyword))
                    {
                        <span>没有找到匹配 "@Model.Keyword" 的玩家</span>
                    }
                    else
                    {
                        <span>当前没有在线玩家</span>
                    }
                </p>
            </div>
        }
    </div>
</div>

<!-- 提升等级模态框 -->
<div class="modal fade" id="levelUpModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="levelUpForm" method="post" asp-page-handler="LevelUp">
                <div class="modal-header" style="background: var(--color-accent); color: #000;">
                    <h5 class="modal-title"><i class="bi bi-arrow-up-circle me-2"></i>提升玩家等级</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="playerName" id="levelUpPlayerName" />
                    <div class="mb-3">
                        <label class="form-label">玩家名称</label>
                        <input type="text" class="form-control" id="levelUpPlayerNameDisplay" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">当前等级</label>
                        <input type="text" class="form-control" id="levelUpCurrentLevel" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">提升等级数 <span style="color: var(--color-danger);">*</span></label>
                        <input type="number" class="form-control" name="levels" id="levelUpLevels"
                               min="1" max="100" value="1" required />
                        <small class="text-muted-custom">输入要提升的等级数（1-100）</small>
                    </div>
                    <div class="alert" style="background: var(--color-accent-glow); border: 1px solid var(--color-accent); color: var(--color-text-primary); margin-bottom: 0;">
                        <i class="bi bi-info-circle me-2"></i>
                        提升等级后，玩家将立即获得对应等级的属性和技能点。
                    </div>
                </div>
                <div class="modal-footer">
                    <span class="text-muted-custom me-auto"><i class="bi bi-shield-check"></i> 需要 Admin 权限</span>
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">取消</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg"></i> 确认提升
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div class="toast show" role="alert">
            <div class="toast-header">
                <i class="bi bi-info-circle me-2 text-accent"></i>
                <strong class="me-auto">操作结果</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
                @Model.Message
            </div>
        </div>
    </div>
}

@section Scripts {
<script>
    // 提升等级模态框数据填充
    var levelUpModal = document.getElementById('levelUpModal');
    levelUpModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        var playerName = button.getAttribute('data-player-name');
        var playerLevel = button.getAttribute('data-player-level');

        document.getElementById('levelUpPlayerName').value = playerName;
        document.getElementById('levelUpPlayerNameDisplay').value = playerName;
        document.getElementById('levelUpCurrentLevel').value = 'Lv.' + playerLevel;
        document.getElementById('levelUpLevels').value = 1;
    });

    // 提升等级表单 AJAX 提交
    document.addEventListener('DOMContentLoaded', function() {
        const levelUpForm = document.getElementById('levelUpForm');
        if (levelUpForm) {
            AjaxForm.bindOne(levelUpForm, {
                successMessage: '等级提升成功',
                closeModal: true,
                modalId: 'levelUpModal',
                onSuccess: function(result) {
                    const playerName = document.getElementById('levelUpPlayerName').value;
                    const levelCell = document.querySelector(`[data-player-level="${playerName}"] span`);
                    if (levelCell && result?.newLevel) {
                        levelCell.textContent = `Lv.${result.newLevel}`;
                    }
                }
            });
        }

        // 召唤玩家表单 AJAX 提交
        document.querySelectorAll('form[asp-page-handler="Recall"]').forEach(function(form) {
            AjaxForm.bindOne(form, {
                successMessage: '已将玩家召唤到身边'
            });
        });

        // 踢下线表单 AJAX 提交
        document.querySelectorAll('form[asp-page-handler="Kick"]').forEach(function(form) {
            AjaxForm.bindOne(form, {
                successMessage: '已将玩家踢下线',
                onSuccess: function() {
                    const playerName = new FormData(form).get('playerName');
                    const row = document.querySelector(`[data-player-row="${playerName}"]`);
                    if (row) row.remove();

                    const counter = document.getElementById('onlinePlayerCount');
                    if (counter) {
                        const match = counter.textContent.match(/当前在线\\s*(\\d+)\\s*人/);
                        if (match) {
                            const count = Math.max(0, parseInt(match[1], 10) - 1);
                            counter.textContent = `当前在线 ${count} 人`;
                        }
                    }
                }
            });
        });
    });

    // 自动隐藏 Toast
    setTimeout(function() {
        var toasts = document.querySelectorAll('.toast');
        toasts.forEach(function(toast) {
            var bsToast = new bootstrap.Toast(toast);
            bsToast.hide();
        });
    }, 3000);
</script>
}
